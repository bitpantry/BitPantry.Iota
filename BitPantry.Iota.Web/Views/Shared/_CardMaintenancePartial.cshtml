@model CardModel

<div class="container">

    <div class="col-12 mt-5">
        <h1 class="display-6">@Model.Address</h1>
    </div>

    <div class="mt-4">
        <partial name="_PassagePartial" model='@Model.Passage' />
    </div>

    <div class="d-flex mt-5 flex-row">
        <div>
            <a asp-action="SelectNewTab" asp-controller="Card" asp-route-id="@Model.Id" class="btn btn-secondary px-3">
                Move
            </a>
        </div>
        <div class="ps-2">
            <a href="#" onclick="confirmDelete()" class="btn btn-danger px-3">
                Delete
            </a>
        </div>
    </div>

    <div class="mt-4">
        <partial name="_CardInfoTablePartial" model='@Model' />
    </div>

</div>

<!-- Confirmation dialog markup -->

<div id="deleteConfirmationModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Are you sure?</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this card?</p>
                <p class="fw-bold fs-5">@Model.Passage.Address</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="cancelDelete()">Cancel</button>
                <a asp-action="Delete" asp-controller="Card" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete() {
        $('#deleteConfirmationModal').modal('show');
    }

    function cancelDelete() {
        $('#deleteConfirmationModal').modal('hide');
    }
</script>