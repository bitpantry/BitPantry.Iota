@model dynamic

@* 
    Requires model with the following properties:

    string BackgroundColor
    string Title
    int Count
    string Action

*@


<div class="col-md-4 mb-4">
    <div class="card text-center" style="background-color: @Model.BackgroundColor">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">
                @if (Model.Count > 0)
                {
                    var label = $"{Model.Count} cards";
                    <a asp-action="@Model.Action">@label</a>
                }
                else
                {
                    <span>No Cards</span>
                }
            </p>
        </div>  
    </div>
</div>