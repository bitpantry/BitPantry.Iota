@model BiblePassage

<div>
    <h2>Bible Passage</h2>
    <p><strong>Is Valid:</strong> @Model.IsValid</p>
    <p><strong>Bible ID:</strong> @Model.BibleId</p>
    <p><strong>Translation Short Name:</strong> @Model.TranslationShortName</p>
    <p><strong>Translation Long Name:</strong> @Model.TranslationLongName</p>
    <p><strong>Book Number:</strong> @Model.BookNumber</p>
    <p><strong>Book Name:</strong> @Model.BookName</p>
    <p><strong>Chapter Number:</strong> @Model.ChapterNumber</p>
    <p><strong>Verse Number From:</strong> @Model.VerseNumberFrom</p>
    <p><strong>Verse Number To:</strong> @Model.VerseNumberTo</p>
    
    <h3>Verses</h3>
    <ul>
        @foreach (var verse in Model.Verses)
        {
            <li><strong>Verse @verse.Key:</strong> @verse.Value</li>
        }
    </ul>
</div>
