@model dynamic

@*
    Requires model with the following properties:
    string BackgroundColor
    string Title
    int Count
    string Action
    string RouteId (optional)
*@

@{
    var modelType = Model.GetType();
    var hasRouteId = modelType.GetProperty("RouteId") != null;

    var actionLink = hasRouteId
        ? Url.Action((string)Model.Action, null, new { id = Model.RouteId })
        : Url.Action((string)Model.Action);
}

<div class="col-md-4 mb-4">
    @if (Model.Count > 0)
    {
        <a href="@actionLink" style="text-decoration: none; color: inherit;">
            <div class="card text-center" style="background-color: @Model.BackgroundColor; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); cursor: pointer;">
                <div class="card-body">
                    <div class="d-flex justify-content-center gap-4">
                        <h5 class="card-title mb-0">@Model.Title</h5>
                        <p class="card-text mb-0">@Model.Count cards</p>
                    </div>
                </div>
            </div>
        </a>
    }
    else
    {
        <div class="card text-center" style="background-color: @Model.BackgroundColor">
            <div class="card-body">
                <div class="d-flex justify-content-center gap-4">
                    <h5 class="card-title mb-0">@Model.Title</h5>
                    <p class="card-text mb-0"><span>No Cards</span></p>
                </div>
            </div>
        </div>
    }
</div>
